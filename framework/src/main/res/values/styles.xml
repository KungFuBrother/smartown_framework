<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_accent</item>
        <item name="android:windowBackground">@color/background_window</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.MenuText</item>
        <item name="actionMenuTextColor">@color/white_cf</item>
    </style>
    <!--toolbar标题字体-->
    <style name="AppTheme.TitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--toolbar menu字体-->
    <style name="AppTheme.MenuText">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_cf</item>
    </style>

    <style name="TextSecond">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_9f</item>
    </style>

    <style name="TextSelected">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextDisable">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black_6f</item>
    </style>

</resources>